{
  "manifest_version": 3,
  "name": "YouTube Video Summarizer",
  "version": "1.0.0",
  "description": "Summarize YouTube videos using AI and video subtitles",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://*/",
    "http://127.0.0.1:*/",
    "http://localhost:*/"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/index.js"],
      "css": ["content/styles.css"]
    }
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
